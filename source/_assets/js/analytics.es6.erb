//= depend_on_env JEKYLL_ENV

<% if (@environment.jekyll.config["debug"] || Jekyll.env == "production") && @environment.jekyll.config["gaid"] %>
  (() => {
    loadAnalytics = () => {
      if (navigator.userAgent.indexOf("Speed Insights") == -1) {
        window.dataLayer = window.dataLayer || [];
        function gtag() {
          dataLayer.push(arguments);
        }

        gtag("js", new Date());
        gtag("config", "<%= @environment.jekyll.config["gaid"] %>");
      }
    }
  })();
<% end %>
